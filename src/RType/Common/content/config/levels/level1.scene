# ====================================================================
# R-TYPE - LEVEL 1 CONFIGURATION
# Config-driven level design - All parameters defined here
# ====================================================================

[METADATA]
level_id=1
level_name=Asteroid Field Assault
level_description=Navigate through treacherous asteroid fields and defeat the alien forces
difficulty=NORMAL
recommended_level=1
unlock_requirement=none

# ====================================================================
# VISUAL & AUDIO
# ====================================================================
[VISUALS]
background_texture=src/RType/Common/content/sprites/test.png
background_scroll_speed=60.0
background_parallax_layers=1
background_color=0,0,0,255

music_track=theme
music_volume=70.0
ambient_sound=space_ambient
ambient_volume=30.0

# ====================================================================
# LEVEL PROGRESSION
# ====================================================================
[PROGRESSION]
level_length=15000
# Duration in seconds before boss appears (if no script trigger)
boss_spawn_time=120.0
boss_intro_delay=3.0

# Victory conditions
victory_condition=DEFEAT_BOSS
time_limit=300.0
min_score_required=0

# ====================================================================
# PLAYER PARAMETERS (overrides for this level)
# ====================================================================
[PLAYER]
start_x=100.0
start_y=540.0
max_lives=3
continue_allowed=true
invincibility_time=2.0

# Power-up spawn rates (0.0 to 1.0)
powerup_spawn_rate=0.15
weapon_upgrade_rate=0.10
shield_spawn_rate=0.08
extra_life_rate=0.02

# ====================================================================
# DIFFICULTY SETTINGS
# ====================================================================
[DIFFICULTY]
# Enemy health multiplier (1.0 = normal, 1.5 = 150% health)
enemy_health_multiplier=1.0
# Enemy damage multiplier
enemy_damage_multiplier=1.0
# Enemy speed multiplier
enemy_speed_multiplier=1.0
# Enemy fire rate multiplier (higher = faster shooting)
enemy_fire_rate_multiplier=1.0
# Boss health multiplier
boss_health_multiplier=1.0
# Score multiplier
score_multiplier=1.0

# ====================================================================
# SPAWN SYSTEM
# ====================================================================
[SPAWNING]
# Main spawn script
spawn_script=src/RType/Common/content/config/level1_spawns.cfg
# Enable random enemy waves between scripted spawns
random_waves_enabled=false
random_wave_interval=20.0
random_wave_min_enemies=2
random_wave_max_enemies=5

# Pod spawn configuration
pod_spawn_enabled=true
pod_spawn_interval=15.0
pod_min_spawn_interval=10.0
pod_max_spawn_interval=20.0

# ====================================================================
# OBSTACLES & ENVIRONMENT
# ====================================================================
[OBSTACLES]
# Scrolling obstacles (asteroids, debris)
obstacle_enabled=false
obstacle_start_time=999.0
obstacle_end_time=999.0
obstacle_interval=8.0
obstacle_speed=120.0
obstacle_hp=150
obstacle_damage=1
obstacle_score_value=50

